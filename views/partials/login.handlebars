<main style="height: 100% !important;">

  <div class="row valign-wrapper" style="z-index: 1; height: 100% !important;">
    <!--Login section-->

    <div class="col s12" style="height: 100% !important;">
      <div class="card-panel" style="background-color: rgba(255, 255, 255, 0.75); height: 100% !important;">
        <h4 style="display:flex; justify-content:center;">Login</h4>

        <form class="form login-form">
          <div class="form-group" style="padding-top: 15px !important;">
            <label for="email-login"><span class="grey-text text-darken-4">email:</span></label>
            <input class="form-input" type="text" id="email-login" />
          </div>
          <div class="form-group" style="padding-top: 15px !important;">
            <label for="password-login"><span class="grey-text text-darken-4">password:</span></label>
            <input class="form-input" type="password" id="password-login" />
          </div>
          <div class="form-group" style="padding-top: 15px !important;">
            <button class="waves-effect waves-light btn cyan darken-3" type="submit"><span
                class="white-text">Login</span></button>
          </div>

          <p class="red-text" id="login-error" style="margin-top: 10px;"></p>
          <p style="margin-top: 5px;">
            Forgot your password?
            <a class="modal-trigger" href="#forgotPasswordModal">Click here</a>
          </p>



        </form>

      </div>
    </div>

  </div>

  <script src="./js/login.js"></script>
</main>