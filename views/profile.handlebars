<main class="orange lighten-3">
  <header class="row valign-wrapper" style="margin-bottom: 0;">
    <div class="col s6 valign-wrapper">
      <h2 class="cyan-text text-darken-3">Bucket</h2>
    </div>
    <div class="col s3 valign-wrapper">
      <h6 class="cyan-text text-darken-3">Welcome back, {{name}}</h6>
    </div>
    <div class="col s3 valign-wrapper" style="text-align: right;">
      <a href="views/homePage" class="waves-effect waves-light btn grey darken-4">
        <span class="orange-text text-lighten-3">Home</span>
      </a>
    </div>
  </header>

  <div class="row content">
    <div class="col s8">
      <div class="card-panel">
        {{#if bucketlistitems.length}}
          <h4>My Bucket List:</h4>
          {{#each bucketlistitems as |BucketListItem|}}
            <div class="row mb-2">
              <div class="col s8">
                <h5>{{BucketListItem.item}}</h5>
                <p>Category: {{BucketListItem.category}}</p>
                <p>Description: {{BucketListItem.description}}</p>
                <p>
                  <label>
                    <input type="checkbox" />
                    <span>Completed?</span>
                  </label>
                </p>
              </div>
              <div class="col s4" style="display: flex; flex-direction: column; gap: 10px;">
                <button id="update" class="waves-effect waves-light btn grey darken-4" data-id="{{BucketListItem.id}}">
                  <span class="orange-text text-lighten-3">Update</span>
                </button>
                <button id="delete" class="waves-effect waves-light btn grey darken-4" data-id="{{BucketListItem.id}}">
                  <span class="orange-text text-lighten-3">Delete</span>
                </button>
              </div>
            </div>
          {{/each}}
        {{else}}
          <p>No items in your bucket list yet.</p>
        {{/if}}
      </div>
    </div>

    <div class="col s4">
      <div class="card-panel">
        <h6>Add an idea to your Bucket List:</h6>
        <form class="new-project-form">
          <div class="input-field">
            <input id="bucketlistitem-item" type="text" name="bucketlistitem-item" />
            <label for="bucketlistitem-item">Idea Title:</label>
          </div>
          <div class="input-field">
            <input id="bucketlistitem-desc" type="text" name="bucketlistitem-desc" />
            <label for="bucketlistitem-desc">Description:</label>
          </div>
          <div class="input-field">
            <input id="bucketlistitem-category" type="text" name="bucketlistitem-category" />
            <label for="bucketlistitem-category">Category:</label>
          </div>
          <button type="submit" class="waves-effect waves-light btn grey darken-4">
            <span class="orange-text text-lighten-3">Add</span>
          </button>
        </form>
      </div>
    </div>
  </div>

  <form id="update-form" style="display: none;" class="card-panel white lighten-5">
    <h3>Update Bucket List Item:</h3>
    <div class="input-field">
      <input id="update-bucketlistitem-item" type="text" />
      <label for="update-bucketlistitem-item">Item:</label>
    </div>
    <div class="input-field">
      <input id="update-bucketlistitem-category" type="text" />
      <label for="update-bucketlistitem-category">Category:</label>
    </div>
    <div class="input-field">
      <input id="update-bucketlistitem-desc" type="text" />
      <label for="update-bucketlistitem-desc">Description:</label>
    </div>
    <button type="submit" class="waves-effect waves-light btn grey darken-4">
      <span class="orange-text text-lighten-3">Submit Update</span>
    </button>
  </form>
</main>

<script src="/js/profile.js"></script>

